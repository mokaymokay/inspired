<% if !@posts.empty? %>
  <% @posts.each do |post| %>
    <div class="card my-4">
      <div class="card-body">
        <div class="mb-3"><small><a href="/users/<%= post.user.id %>"><%= post.user.username %></a></small></div>
        <blockquote class="blockquote mb-0">
          <p><%= post.quote %></p>
          <footer class="blockquote-footer"><%= post.author %></footer>
        </blockquote>
        <br>
        <% post.tags.each do |tag| %>
          <small>#<%= tag.content %></small>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p><%= @blog_owner.username %> hasn't made a post.</p>
<% end %>
